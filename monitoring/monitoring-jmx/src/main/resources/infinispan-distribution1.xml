<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:infinispan:config:5.1 http://www.infinispan.org/schemas/infinispan-config-5.1.xsd"
	xmlns="urn:infinispan:config:5.1">

	<global>
		<transport clusterName="my-distributed-cluster1">
			<properties>
				<property name="configurationFile" value="jgroups-tcp1.xml" />
			</properties>
		</transport>
		<globalJmxStatistics enabled="true"
			jmxDomain="myinfinispan.one" />
	</global>



	<default>
		<jmxStatistics enabled="true" />
		<clustering mode="distribution">
			<hash numOwners="2" />
			<sync />
		</clustering>
	</default>

	<namedCache name="myCache">
		<jmxStatistics enabled="true" />
		<clustering mode="distribution">
			<hash numOwners="2" />
			<sync />
		</clustering>
		<!-- <customInterceptors>
			<interceptor after="org.infinispan.interceptors.CacheMgmtInterceptor"
				class="org.infinispan.interceptors.MemoryUsageInterceptor" />
		</customInterceptors> -->
	</namedCache>

	<namedCache name="myOtherCache">
		<jmxStatistics enabled="true" />
		<clustering mode="distribution">
			<hash numOwners="2" />
			<sync />
		</clustering>
	</namedCache>

</infinispan>
